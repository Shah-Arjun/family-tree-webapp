{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "build",   // <--- ADD THIS
    "noEmit": true       // <--- Prevents TS from writing JS files during dev
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
